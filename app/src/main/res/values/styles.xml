<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="actionOverflowMenuStyle">@style/Widget.Halo.OverflowMenu</item>
    </style>

    <style name="Widget.Halo.Toolbar" parent="Widget.MaterialComponents.Toolbar">
        <item name="titleTextAppearance">@style/TextAppearance.Halo.Toolbar</item>
        <item name="titleMargin">0dp</item>
    </style>

    <style name="TextAppearance.Halo.Toolbar" parent="TextAppearance.MaterialComponents.Headline6">
        <item name="android:textSize">18sp</item>
    </style>

    <style name="Widget.Halo.OverflowMenu" parent="android:Widget.Material.PopupMenu.Overflow">
        <item name="android:windowDisablePreview">true</item>
        <item name="overlapAnchor">false</item>
        <item name="android:dropDownVerticalOffset">5.0dp</item>
        <item name="android:background">@color/colorPrimary</item>
    </style>

    <style name="DialogStyle" parent="Theme.MaterialComponents.NoActionBar">
        <item name="android:windowNoTitle">true</item>
        <item name="colorPrimary">@color/colorAccent</item>
    </style>



    <!--Fonts styles. -->
    <style name="TextViewStyle.Condensed" parent="android:Widget.TextView">
        <item name="android:fontFamily">sans-serif-condensed</item>
    </style>

    <style name="TextViewStyle.Serif" parent="android:Widget.TextView">
        <item name="android:fontFamily">serif</item>
    </style>

    <!--Base TextView style. -->
    <style name="BasicTextView">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
    </style>

    <style name="BasicTextView.RightMargin">
        <item name="android:layout_marginEnd">@dimen/margin_small</item>
    </style>

    <style name="BasicTextView.RightMarginBig">
        <item name="android:layout_marginEnd">@dimen/margin_big</item>
    </style>

    <style name="BasicTextView.LeftMargin">
        <item name="android:layout_marginStart">@dimen/margin_small</item>
    </style>

    <style name="BasicTextView.LeftLargeMargin">
        <item name="android:layout_marginStart">@dimen/margin_large</item>
    </style>

    <style name="BasicTextView.UpperRightMargin">
        <item name="android:layout_marginEnd">@dimen/margin_small</item>
        <item name="android:layout_marginTop">@dimen/margin_normal</item>
    </style>

    <style name="BasicTextView.UpperLeftMargin">
        <item name="android:layout_marginStart">@dimen/margin_small</item>
        <item name="android:layout_marginTop">@dimen/margin_large</item>
    </style>

    <style name="BasicTextView.Margin">
        <item name="android:layout_margin">@dimen/margin_small</item>
    </style>

    <style name="TextInfoStyle" parent="BasicTextView">
        <item name="android:layout_marginRight">@dimen/margin_normal</item>
        <item name="android:layout_marginLeft">@dimen/margin_normal</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_gravity">center</item>
    </style>

    <style name="NightTemperatureTextAppearance" parent="TextAppearance.AppCompat.Medium">
        <!--<item name="android:textColor">@color/textColorTertiary</item>-->
    </style>

    <!-- Base ImageView style. -->
    <style name="BasicImageView">
        <item name="android:layout_width">@dimen/basic_image_view_height_and_width</item>
        <item name="android:layout_height">@dimen/basic_image_view_height_and_width</item>
    </style>

    <style name="BasicImageView.Margin">
        <item name="android:layout_margin">@dimen/margin_normal</item>
    </style>
</resources>
